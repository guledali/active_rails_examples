
<div class="ticket">
  <header>
    <h1><%= @project.name %></h1>
  </header>

  <header>
    <h2><%= @ticket.name %></h2>

    <ul class="actions">
      <li><%= link_to "Edit Ticket", [:edit, @project, @ticket], class: "edit" %></li>
      <li><%= link_to "Delete Ticket", [@project, @ticket], method: :delete,
        data: { confirm: "Are you sure you want to delete this ticket?"},
        class: "delete" %></li>
    </ul>
  </header>

  <dl class="attributes">
    <dt>Author:</dt>
    <dd><%= @ticket.author.email %></dd>

    <dt>Created:</dt>
    <dd><%= time_ago_in_words(@ticket.created_at) %> ago</dd>

    <% if @ticket.state.present? %>
      <dt>State:</dt>
      <dd><%= render @ticket.state %></dd>
    <% end %>
  </dl>

  <hr>

  <%= simple_format(@ticket.description) %>

  <header>
    <h3>Comments</h3>
  </header>

  <div id="comments">
    <% if @ticket.comments.persisted.any? %>
      <%= render @ticket.comments.persisted %>
    <% else %>
      <p>There are no comments for this ticket.</p>
    <% end %>
  </div>

  <%= render "comments/form", ticket: @ticket, comment: @comment %>

</div>
